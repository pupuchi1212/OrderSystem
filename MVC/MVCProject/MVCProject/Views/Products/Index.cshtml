@model IEnumerable<MVCProject.Models.ProductInfo>
@{ ViewBag.Title = "產品清單"; }

<h2>產品清單</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">新增產品</a>
<table class="table">
    <thead>
        <tr>
            <th>產品編號</th>
            <th>名稱</th>
            <th>價格</th>
            <th>動作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = product.ProductId })" class="btn btn-warning">編輯</a>
                    <a href="@Url.Action("Delete", new { id = product.ProductId })" class="btn btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>